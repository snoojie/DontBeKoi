{
    "compilerOptions":
    {
        // if left to default, promises would not be supported
        "target": "esnext",

        // needed to support ts-node and avoid having type:module in package.json
        // normally this is the default module anyway, 
        // but since we changed target it's not
        "module": "CommonJS",

        // dump all js files to ./build
        "outDir": "build"
    },
}